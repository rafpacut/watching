#!/bin/bash




black='\E[30;34m'
red='\E[31;34m'
green='\E[32;34m'
yellow='\E[33;34m'
blue='\E[37;34m'
magenta='\E[35;34m'
cyan='\E[36;34m'
white='\E[37;34m'

cecho()
{
	message=${1:-$default_msg}
	color=${2:-$black}
	
	echo -e "$color $message"
	
	return
}


lsc()
{
if [ -e ".sc" ]; then
	
	for i in *
	do
		if [ -e $i/$USER.start ] && [ ! -e $i/$USER.end ]; then
			cecho   $i $green
		fi
	done
	
	for i in *
	do
		if [ ! -e $i/$USER.end ]; then
			cecho  $i 
		fi
	done
else

"ls"
fi
}


