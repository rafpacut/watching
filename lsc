#!/bin/bash




black='\E[30;48m'
red='\E[31;48m'
green='\E[32;48m'
yellow='\E[33;48m'
blue='\E[37;48m'
magenta='\E[35;48m'
cyan='\E[36;48m'
white='\E[37;48m'

cecho()
{
	message=${1:-$default_msg}
	color=${2:-$black}
	
	echo -e "$color $message"
	
	return
}


#lsc()
#{
if [ -e ".sc" ]; then
	for i in *
	do
		if [ -e $i/$USER.start ] && [ ! -e $i/$USER.end ] && [ ! -e $i/downloading ]; then
			cecho   $i $green
		fi
	done
	
	for i in *
	do
		if [ ! -e $i/$USER.end ] && [ ! -e $i/downloading ] && [ ! -e $i/$USER.start ]; then
			cecho  $i 
		fi
	done
	
	for i in *
	do
		if [ -e $i/downloading ]; then
			cecho $i $red
		fi
	done
else
	getopts ":l" args
	if [ "$args" = "l" ]; then
		ls -l
	else
		ls
	fi
fi
#}
